<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#editModal">
    edit
  </button>
  
  <!-- Modal -->
  <div class="modal fade" id="editModal">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="editTitle">Edit Profile</h5>
        </div>
        <div class="modal-body">
             <!-- Edit Profile Form-->
            <div class="edit__profile__container">
                <form action='/edit' method=POST enctype="multipart/form-data">
                    <section class="form-group row">
                        <input class='col' type="text" name='firstName' value=<%= user.firstName %>>
                    </section>
                    <section class="form-group row">
                        <input class='col' type="text" name='lastName' value=<%= user.lastName %>>
                    </section>
                    <section class="form-group row">
                        <input class='col' type="text" name='title' value=<%= user.title %>>
                    </section>
                    <section class="form-group row">
                        <label class='col' for="profileImage">Choose image</label>
                        <input class='col' type="file" name='profileImage'>
                    </section>
                    <section class="form-group row">
                        <input class='col' type="text" name='certifications' placeholder='Certifications'>
                    </section>
                    <section class="form-group row">
                        <input class='col' type="text" name='insurance' placeholder='Insurance'>
                    </section>
                </div>
            </div>
            <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary">Save changes</button>
            </div>
        </form>
      </div>
    </div>
  </div>